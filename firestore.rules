rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Colecciones Públicas (Fichas, Artículos, Glosario) ---
    // Cualquiera puede leer estos datos.
    // La escritura se permite para que el script de siembra pueda funcionar.
    // En un entorno de producción, esto podría restringirse más.
    match /fichas_tecnicas_cultivos/{document=**} {
      allow read: if true;
      allow write: if true; 
    }
    match /articulos/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    match /glosario/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    // --- Colección de Usuarios ---
    // Solo el usuario autenticado puede acceder a su propio documento y subcolecciones.
    match /usuarios/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
