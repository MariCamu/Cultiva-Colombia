rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own user document
    match /usuarios/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow users to manage their own crops
    match /usuarios/{userId}/cultivos_del_usuario/{cropId} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Allow users to manage the journal for their own crops
    match /usuarios/{userId}/cultivos_del_usuario/{cropId}/diario/{logId} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Public access to technical sheets (read-only)
    match /fichas_tecnicas_cultivos/{fichaId} {
      allow read: if true;
    }
  }
}
