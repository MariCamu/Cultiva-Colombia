
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGLAS PÃšBLICAS ---
    // Cualquiera puede leer estas colecciones.
    // Solo solicitudes autenticadas a nivel de servidor (como el script db:seed) pueden escribir.
    match /fichas_tecnicas_cultivos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /articulos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /glosario/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- REGLAS DE USUARIOS ---
    // Los usuarios solo pueden acceder y modificar sus propios datos.
    match /usuarios/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
