
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write only their own documents in the 'usuarios' collection.
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to manage their own subcollections (crops, alerts, etc.)
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Public collections (if any) can be defined here.
    // For example, to make 'fichas_tecnicas_cultivos' readable by anyone:
    // match /fichas_tecnicas_cultivos/{fichaId} {
    //   allow read: if true;
    //   allow write: if false; // Or based on admin roles
    // }
  }
}
